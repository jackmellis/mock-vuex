{
    "env": {
        "browser": true,
        "commonjs": true,
        "node" : true
    },
    "globals" : {
      "Promise" : false
    },
    "extends": "eslint:recommended",
    "plugins" : [],
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion" : 5
    },
    "rules": {
        "indent": [
            "warn",
            2
        ],
        "linebreak-style": [
            "off",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "warn",
            "always"
        ]
    }
}
